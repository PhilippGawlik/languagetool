    <category id="MISC" name="Leichte Sprache">

        <rule id="FRAGEN" name="Leichte Sprache: Fragen">
            <regexp>.*\?.*</regexp>
            <message>Vermeiden Sie Fragen - vor allem rhetorische. Schreiben Sie immer, was Sie meinen.</message>
            <short>Fragen vermeiden.</short>
            <example correction=""><marker>Ist dies eine Frage?</marker></example>
            <example>Dies ist keine Frage!</example>
        </rule>

